        <mdui-card class="stats-chart-card" variant="filled">
            <div class="chart">
                <canvas id="chart-benzene"></canvas>
            </div>
        </mdui-card>

        <mdui-card class="stats-chart-card" variant="filled">
            <div class="chart">
                <canvas id="chart-nitrobenzene"></canvas>
            </div>
        </mdui-card>

